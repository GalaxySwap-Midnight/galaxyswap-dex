{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "compact": {
      "env": ["COMPACT_HOME"],
      "inputs": ["src/**/*.compact"],
      "outputLogs": "new-only",
      "outputs": ["src/artifacts/**", "src/gen/**", "gen/**"]
    },
    "test": {
      "outputs": [],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "compact"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.mts",
        "src/**/*.tsx",
        "!src/**/*.test.ts",
        "!tests/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        ".env"
      ],
      "outputs": ["dist/**"]
    }
  }
}
