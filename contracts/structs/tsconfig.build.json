{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
		"noEmit": false,
		"allowImportingTsExtensions": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/test/**/*.ts",
		"vitest.config.ts"
	]
}